extends layout

block content
    .upload-page.pages
        h1.page-head
            p 上传契约
        iframe(id="uploadTrg", name="uploadTrg", height="0", width="0", frameborder="0", scrolling="yes")
        .dropbox
            .dropzone
                form(action="uploadhandler", id="uploadForm" method="post", enctype = "multipart/form-data", target="uploadTrg")
